@model CarShop.Core.ViewModels.GroupProductViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="col-12 p-2">

    @*slider*@
    <partial name="slider.cshtml" />


    @*groups*@
    <div class="col-12 text-center">
        <partial name="groupsPartial.cshtml" model="Model.Groups" />
        <a class="btn btn-info rounded-5 m-1 text-white">
            <span></span> more...
        </a>
    </div>
    <hr class="w-75 m-auto" />
    
    @*products*@
    <div class="col-12 p-0 mt-3">
        <partial name="productsPartial" model="Model.Products" />

        <div class="col-12 text-center pt-3">
            <a asp-action="products" class="btn btn-outline-info rounded-5 m-1">
                <span></span> more product...
            </a>
        </div>
    </div>


</div>

