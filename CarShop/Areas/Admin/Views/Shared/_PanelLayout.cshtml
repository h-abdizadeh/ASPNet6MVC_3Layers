<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/PanelStyle.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
</head>
<body>

    <div class="sidebar col-md-3 col-6">
        <a href="~/"><span class="fa fa-home fa-lg"></span>صفحه هوم</a>
        <a><span class="fa fa-users fa-lg"></span>کاربران</a>
        <a asp-controller="Groups" asp-action="Index">
            <span class="fa fa-list fa-lg"></span>دسته بندی ها</a>

        <a asp-controller="Product" asp-action="Index" >
            <span class="fa fa-car fa-lg"></span>محصولات</a>

        <a><span class="fa fa-shopping-bag fa-lg"></span>سفارشات</a>
        <a><span class="fa fa-gears fa-lg"></span>تنظیمات</a>
        <a><span class="fa fa-headphones fa-lg"></span>پشتیبانی</a>
        <a asp-controller="account" asp-action="logout" ><span class="fa fa-sign-out fa-lg"></span>خروج</a>
    </div>

    <div class="col-md-9 col-6">
        @RenderBody()
    </div>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/mainscript.js"></script>
</html>
