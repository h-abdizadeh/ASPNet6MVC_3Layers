@model IEnumerable<CarShop.Database.Models.ProductFeature>


<img src="~/image/product/@Model.First().Product.Img" width="256">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
          @*  <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Feature)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
         @*<td>
                @Html.DisplayFor(modelItem => item.Product.Img)    
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Feature.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
